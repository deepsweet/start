{
  "private": true,
  "description": "ðŸ”´ Functional task runner for Node.js",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@auto/start-plugin": "^0.0.7",
    "@babel/core": "^7.4.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-syntax-typescript": "^7.3.3",
    "@babel/plugin-transform-runtime": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/register": "^7.4.0",
    "@types/blue-tape": "^0.1.32",
    "@types/node": "^11.12.2",
    "@types/prompts": "^1.2.0",
    "@typescript-eslint/parser": "^1.5.0",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "babel-plugin-dynamic-import-node-babel-7": "^2.0.7",
    "babel-plugin-module-resolver": "^3.2.0",
    "blue-tape": "^1.0.0",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-standard": "^4.0.0",
    "mocku": "^0.5.0",
    "spyfn": "^0.2.0",
    "tap-diff": "^0.1.1",
    "typeon": "^0.2.0",
    "typescript": "^3.4.1"
  },
  "scripts": {
    "start": "node packages/cli/src/index.js",
    "debug": "node --inspect-brk packages/cli/src/index.js"
  },
  "start": {
    "require": [
      [
        "@babel/register",
        {
          "presets": [
            [
              "@babel/preset-env",
              {
                "targets": {
                  "node": "current"
                }
              }
            ],
            "@babel/preset-typescript"
          ],
          "plugins": [
            "@babel/plugin-syntax-dynamic-import",
            "babel-plugin-dynamic-import-node"
          ],
          "extensions": [
            ".ts",
            ".js"
          ]
        }
      ]
    ],
    "reporter": "@start/reporter-verbose/src/"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "standard",
      "node",
      "promise",
      "import"
    ],
    "extends": [
      "standard",
      "plugin:node/recommended",
      "plugin:promise/recommended",
      "plugin:import/recommended"
    ],
    "env": {
      "node": true
    },
    "rules": {
      "no-undef": "off",
      "no-unused-vars": "off",
      "import/no-unresolved": "off",
      "import/named": "off",
      "node/no-unsupported-features/es-syntax": [
        "error",
        {
          "ignores": [
            "asyncFunctions",
            "modules",
            "restSpreadProperties"
          ]
        }
      ],
      "node/shebang": "off",
      "node/no-missing-import": [
        "error",
        {
          "tryExtensions": [
            ".ts",
            ".js"
          ]
        }
      ],
      "node/no-missing-require": [
        "error",
        {
          "tryExtensions": [
            ".ts",
            ".js"
          ]
        }
      ],
      "promise/avoid-new": "off",
      "promise/always-return": "off",
      "promise/no-nesting": "off",
      "promise/no-callback-in-promise": "off",
      "prefer-promise-reject-errors": "off",
      "no-throw-literal": "off",
      "no-debugger": "off"
    }
  },
  "eslintIgnore": [
    "build/",
    "coverage/",
    "node_modules/"
  ],
  "engines": {
    "node": ">=8.6.0"
  }
}
